# vi: set ft=gitconfig
[include]
  path = ~/.gitconfig_user

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[alias]
  co = checkout
  f = fetch
  lg = log --pretty=format:'%C(bold cyan)%h%Creset %C(brightyellow)%ad %Cgreen%<(29,trunc)%s%Creset %Cblue[%an]%Creset' --date=short
  l = log --pretty=format:'%C(bold cyan)%h%Creset %C(brightyellow)%ad %Cgreen%<(29,trunc)%s%Creset %Cblue[%an]%Creset' --date=short -7
  oops = reset HEAD~1
  rh = reset --hard
[color "diff"]
	meta = blue
	plain = white
[color "status"]
	header = white
