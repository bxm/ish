filetype plugin indent on
set breakindent
set breakindentopt=shift:2,min:40,sbr
set showbreak=>>
set wrap lbr
" On pressing tab, insert 2 spaces
set expandtab
" show existing tab with 2 spaces width
set tabstop=2
set softtabstop=2
" when indenting with '>', use 2 spaces width
set shiftwidth=2
set foldmethod=indent
